 <h4>Create Profile</h4>
 <%= form_for [current_user, @profile] do |f|  %> 
   <div class="form-group">
     <%= f.label :name, class: 'sr-only' %>
     <%= f.text_field :name, class: 'form-control', placeholder: "Enter name" %>
   </div>
   <div class="form-group">
     <%= f.label :description, class: 'sr-only' %>
     <%= f.text_area :description, class: 'form-control', placeholder: "Enter description" %>
   </div>
  <div class="form-group">
     <%= f.label :tagline, class: 'sr-only' %>
     <%= f.text_field :tagline, class: 'form-control', placeholder: "Enter tagline" %>
  </div>
  <div class="form-group">
     <%= f.label :location, class: 'sr-only' %>
     <%= f.text_field :location, class: 'form-control', placeholder: "Enter location" %>
  </div>
  <div>
   <%= f.label :avatar, class: 'sr-only' %>
   <%= f.file_field :avatar %>
  </div>
   <%= f.submit "Save Profile", class: 'btn btn-default pull-right' %>
 <% end %>
 
